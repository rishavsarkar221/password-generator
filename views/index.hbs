<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <style>
        body {
            text-align: center;
        }

        form {
            background-color: rgb(57, 192, 17);
            background-size: 50%;
            margin-top: 10rem;
            margin-bottom: 10rem;    
            padding-top: 5%;
            padding-bottom: 5%;
        }

        input[type="text"], input[type="password"] {
            background-color: black;
            color: white;
            width: 20%;
            height: 50px;
            margin-bottom: 1rem;
            text-align: center;
            outline: none;
            border-radius: 50px;
            font-size: 20px;
            border: 4px solid yellow;
        }

        input[type="text"]:focus, input[type="password"]:focus {
            transition: 1s;
            width: 40%;
        }

        span {
            font-family: Arial,sans-serif;
            color: white;
        }

        .password {
            cursor: pointer;
            color: black;
        }
    </style>
</head>
<body>
    <form method="post" action="/login">
        <h1 style="font-family: Arial,sans-serif; color: white;">Enter Name and Email ID</h1>

        <input type="text" name="name" id="name" placeholder="Name" required="true">
        <br>
        <input type="password" name="password" id="password" placeholder="Password" required="true">
        <br>
        <span>Try using <span class="password">{{randomPassword}}</span></span>
        <br><br>
        <input type="checkbox" id="showPassword"> <font face="Arial">Show Password</font>
        <br><br><br>
        <button type="submit" class="btn btn-danger">Sign In</button>
    </form>

    <script>
        document.querySelector(".password").addEventListener("click", function() {
            document.querySelector("#password").value = this.innerHTML;
        });

        document.querySelector("#showPassword").addEventListener("click", function() {
            if(this.checked == true) {
                document.querySelector("#password").setAttribute("type", "text");
            }
            else {
                document.querySelector("#password").setAttribute("type", "password");
            }
        });
    </script>
</body>
</html>